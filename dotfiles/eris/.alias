alias ipaddy='ipconfig getifaddr en1'
alias la='ls -la'
alias lx='exa -labhm --no-permissions --git --modified --color-scale --icons --group-directories-first'
alias lsown='exa -lbhma --icons --color-scale --group-directories-first --sort=modified'
alias lsmodtree='exa --sort=modified -T -L 2 --group-directories-first'
alias lb='/bin/ls --color=auto -alF'
alias ll='lsd -1lhF --size short --group-directories-first --blocks user,git,size,date,name --header'

alias reload='source ~/.config/zsh/.zshrc'

alias lcdstats='nohup ./STARTUP.sh > /dev/null 2>&1 &'

alias dsclean='find . -name ".DS_Store" -print -delete'

